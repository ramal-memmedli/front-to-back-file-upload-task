@model HomeVM;

<!-- SLIDER START -->

        <section id="slider">
            <div class="owl-carousel slider">
                @foreach (Slider slider in Model.Sliders)
                {
                    <div> <img src="~/assets/img/@slider.ImageUrl" alt=""> </div>
                }
            </div>
            <div class="container context pl-lg-5 ml-lg-3">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="text">
                            <h1>Send <span>flowers</span> like</h1>
                            <h1>you mean it</h1>
                            <p class="text-black-50 d-none d-sm-block">Where flowers are our inspiration to create lasting memories. Whatever the occasion, our flowers will
                                make it special cursus a sit amet mauris. </p>
                        </div>
                        <div class="img">
                            <img src="~/assets/img/h2-sign-img.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SLIDER END -->

        <!-- PRODUCTS START -->

        <section id="products">
            <div class="container">
                <div class="row pt-5">
                    <div class="col-12 d-flex justify-content-between">
                        <ul class="category-mobile d-md-none list-unstyled">
                            <li>
                                <a href="" class="categories mr-2">Categories</a>
                                <i class="fas fa-caret-down"></i>
                                <ul class="category list-unstyled" style="display: none;">
                                    <li><a href="" data-id="all">All</a></li>
                                    @foreach (Category category in Model.Categories)
                                    {
                                        <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>
                                    }
                                </ul>
                            </li>
                        </ul>
                        <ul class="category d-none d-md-flex list-unstyled">
                            <li><a href="" data-id="all">All</a></li>
                            @foreach (Category category in Model.Categories)
                            {
                                <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>
                            }
                        </ul>
                        <ul class="list-unstyled">
                            <li>
                                <a href="" class="mr-2">Filter</a>
                                <i class="fas fa-caret-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                                <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                                    <div class="img">
                                        <a href="">
                                            <img src="~/assets/uploads/products/@product.ProductImages?[0].Image.Name" class="img-fluid" alt="">
                                        </a>
                                    </div>
                                    <div class="title mt-3">
                                        <h6>@product.Title</h6>
                                    </div>
                                    <div class="price">
                                        <span class="text-black-50">Add to cart</span>
                                        <span class="text-black-50">$@product.Price</span>
                                    </div>
                                </div>
                            </div>  
                    }
                </div>
                <div class="row justify-content-center my-5">
                    <div class="col-lg-6 d-flex justify-content-center">
                        <a class="btn btn-outline" asp-area="" asp-controller="products" asp-action="index">View more</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- PRODUCTS END -->

        <!-- ABOUT START -->

        <section id="about">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-lg-6">
                        <div class="img">
                            <img src="~/assets/img/@Model.About.VideoThumbnailUrl" class="img-fluid" alt="">
                            <div
                                class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                                <i class="fas fa-play fa-lg"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-text mt-5 mt-lg-0 px-lg-5">
                            <h1>@Model.About.Header</h1>
                            <p class="py-3">@Model.About.Paragraph</p>
                            <ul class="list-unstyled">
                                @for (int i = 0; i < Model.AboutListItems.Count; i++)
                                {
                                    <li class="mt-3"><img src="~/assets/img/h1-custom-icon.png" class="mr-2" alt="">@Model.AboutListItems[i].Content</li class="mt-3">
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- ABOUT END -->

        <!-- EXPERTS START -->

        <section id="experts">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            <h1>Flower Experts</h1>
                            <p class="text-black-50">A perfect blend of creativity, energy, communication, happiness and
                                love. Let us arrange
                                a smile for you.</p>
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                    @foreach (Expert expert in Model.Experts)
                    {
                        <div class="col-md-6 col-lg-3">
                                <div class="item text-center">
                                    <div class="img">
                                        <img src="~/assets/img/@expert.ImageUrl" class="img-fluid rounded-circle" alt="">
                                    </div>
                                    <div class="text mt-3">
                                        <h6>@expert.FullName</h6>
                                        <p class="text-black-50">@expert.Profession</p>
                                    </div>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </section>

        <!-- EXPERTS END -->

        <!-- SUBSCRIBE START -->

        <section id="subscribe">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-12">
                        <div class="content text-center py-5">
                            <h3>Join The Colorful Bunch!</h3>
                            <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                                <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                                <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">Subscribe</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SUBSCRIBE END -->

        <!-- BLOG START -->

        <section id="blog">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            <h1>From our Blog</h1>
                            <p class="text-black-50">A perfect blend of creativity, energy, communication, happiness and
                                love. Let us arrange
                                a smile for you.</p>
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                    @foreach (BlogCard blogCard in Model.BlogCards)
                    {
                        <div class="col-md-6 col-lg-4">
                                <div class="item">
                                    <div class="img position-relative">
                                        <img src="~/assets/img/@blogCard.ImageUrl" class="img-fluid" alt="">
                                        <div class="date rounded bg-light position-absolute py-1 px-2">
                                            <span>@blogCard.CreatedDate</span>
                                        </div>
                                    </div>
                                    <div class="text mt-3 text-center px-5">
                                        <h5>@blogCard.Title</h5>
                                        <p class="text-black-50">@blogCard.Description</p>
                                    </div>
                                </div>
                            </div>
                    }
                    
                </div>
            </div>
        </section>

        <!-- BLOG END -->

        <!-- SAY START -->

        <section id="say">
            <div class="container">
                <div class="row py-5 justify-content-center">
                    <div class="col-md-8 col-xl-6">
                        <div class="owl-carousel say">
                            @foreach (Testimonial testimonial in Model.Testimonials)
                            {
                                <div>
                                        <div class="item text-center">
                                            <div class="img d-flex justify-content-center">
                                                <img src="~/assets/img/@testimonial.ImageUrl" alt="">
                                            </div>
                                            <div class="text text-muted pt-3 pb-5">
                                                <i>@testimonial.Paragraph</i>
                                            </div>
                                            <div class="author">
                                                <h6>@testimonial.FullName</h6>
                                                <p class="text-black-50">@testimonial.Profession</p>
                                            </div>
                                        </div>
                                    </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SAY END -->

        <!-- INSTAGRAM START -->

        <section id="instagram">
            <div class="owl-carousel instagram">
                @foreach (InstagramPost instagramPost in Model.InstagramPosts)
                {
                    <div><img src="~/assets/img/@instagramPost.ImageUrl" class="img-fluid" alt=""></div>
                }
            </div>
            <div class="hastag bg-light text-muted py-2 px-3">
                #FIORELLO
            </div>
        </section>

        <!-- INSTAGRAM END -->