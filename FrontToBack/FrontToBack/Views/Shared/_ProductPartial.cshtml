@model ProductsVM

@foreach (var product in Model.Products)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center product-item-for-calc-count" data-id="@product.Category.Name.ToLower()">
            <div class="img">
                <a href="">
                    <img src="~/assets/uploads/products/@product.ProductImages?[0].Image.Name" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@product.Title</h6>
            </div>
            <div class="price">
                <span class="text-black-50">Add to cart</span>
                <span class="text-black-50">$@product.Price</span>
            </div>
        </div>
    </div>
}