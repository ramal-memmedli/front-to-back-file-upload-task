@model Category

<div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create new category</h4>
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="@Model.Name">Category name</label>
                      <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button asp-area="admin" asp-controller="category" asp-action="index" class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>