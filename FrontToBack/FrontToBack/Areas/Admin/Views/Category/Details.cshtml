@model Category

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
                <a asp-area="admin" asp-controller="category" asp-action="index" class="btn btn-primary mb-4">Go back</a>
            <h4 class="card-title">Category</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td>
                                    @Model.Name
                                </td>
                                <td>
                                    <a asp-area="admin" asp-controller="category" asp-action="update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
                                    <a asp-area="admin" asp-controller="category" asp-action="delete" asp-route-id="@Model.Id" type="button" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>