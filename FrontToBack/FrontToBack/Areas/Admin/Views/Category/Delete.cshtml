@model Category

<div class="card">
                <div class="card-body">
                  <h4 class="card-title">Delete Category</h4>
                  <form method="post" asp-route-id="@Model.Id" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="@Model.Name">Please type <strong>@Model.Name</strong> if you are sure for delete this category</label>
                      <input asp-for="@Model.Name" value="" class="form-control" placeholder="Name">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-area="admin" asp-controller="category" asp-action="details" asp-route-id="@Model.Id" class="btn btn-light">Cancel</a>
                  </form>
                </div>
              </div>